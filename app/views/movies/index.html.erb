<div class="container mt-5">
  <div class="row">
    <% @movies.each_with_index do |movie, index| %>
      <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <!-- Make the movie title clickable -->
            <h5 class="card-title text-center">
              <%= link_to movie.title, movie_path(movie), class: "text-decoration-none" %>
            </h5>
            <p class="card-text text-left">
              <strong>Description:</strong> <%= movie.description %><br>
              <strong>Genres:</strong>
              <% if movie.genres.any? %>
                <% movie.genres.each do |genre| %>
                  <span class="badge bg-secondary"><%= genre.name %></span>
                <% end %>
              <% else %>
                -
              <% end %>
            </p>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <strong>Date Released:</strong> <%= movie.date_released.strftime('%B %d, %Y') if movie.date_released %>
              </li>
              <li class="list-group-item"><strong>Country:</strong> <%= movie.country_of_origin %></li>
              <li class="list-group-item">
                <strong>Showing Start:</strong> <%= movie.showing_start.strftime('%B %d, %Y') if movie.showing_start %>
              </li>
              <li class="list-group-item">
                <strong>Showing End:</strong> <%= movie.showing_end.strftime('%B %d, %Y') if movie.showing_end %></li>
            </ul>
          </div>
          <div class="card-footer d-flex justify-content-between">
            <%= link_to '<i class="bi bi-pencil-fill small-icon"></i>'.html_safe, edit_movie_path(movie), class: "btn btn-secondary btn-sm", title: "Edit" %>
            <%= link_to '<i class="bi bi-trash-fill small-icon"></i>'.html_safe, movie_path(movie), class: "btn btn-danger btn-sm", data: { bs_toggle: "modal", bs_target: "#deleteModal#{movie.id}" }, title: "Delete" %>

            <!-- Modal for deletion confirmation -->
            <div class="modal fade" id="deleteModal<%= movie.id %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    Are you sure you want to delete this movie?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <%= button_to '<i class="bi bi-trash-fill small-icon"></i>'.html_safe, movie_path(movie), method: :delete, class: "btn btn-danger", title: "Delete" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% if (index + 1) % 4 == 0 %>
        </div>
        <div class="row">
      <% end %>

    <% end %>
    </div>
    </div>