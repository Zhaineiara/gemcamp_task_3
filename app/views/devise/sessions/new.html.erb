<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4"> <!-- Compact width -->
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4" style="font-size: 1.5rem;">Log In</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group mb-3">
              <%= f.label :username, class: "form-label" %>
              <%= f.text_field :username, class: "form-control form-control-sm", placeholder: "Enter your username", autofocus: true, autocomplete: "username" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control form-control-sm", placeholder: "Enter your password", autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
                <%= f.label :remember_me, class: "form-check-label", for: "remember_me" %>
              </div>
            <% end %>

            <div class="d-grid">
              <%= f.submit "Log In", class: "btn btn-primary btn-sm" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
